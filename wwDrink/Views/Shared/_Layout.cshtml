<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="apple-mobile-web-app-capable" content="yes"  />
@*        <meta name="viewport" content="width=device-width" />*@
        <meta name="viewport" content="minimum-scale=1.0, width=device-width, maximum-scale=1, user-scalable=no"/>
        <meta name="description" content=""/>
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <div id="fb-root"></div>
        <script>
            window.fbAsyncInit = function() {
                // init the FB JS SDK
                FB.init({
                    appId: '225723827594346',                        // App ID from the app dashboard
                    status : true,                                 // Check Facebook Login status
                    xfbml : true                                  // Look for social plugins on the page
                });
            };

            (function(d, s, id){
                var js, fjs = d.getElementsByTagName(s)[0];
                if (d.getElementById(id)) {return;}
                js = d.createElement(s); js.id = id;
                js.src = "//connect.facebook.net/en_US/all.js";
                fjs.parentNode.insertBefore(js, fjs);
            }(document, 'script', 'facebook-jssdk'));
        </script>
        
        <header>
            <div class="content-wrapper scroll-y">
                <div class="top-menu-wrapper">
                    <div class="float-left">
                        <nav>
                            <ul id="menu">
                                <li>@Html.ActionLink("wwDrink", "Index", "Home")</li>
                                <li>@Html.ActionLink("Beer", "Index", "Beer", null, new { id = "BeerButton"})</li>
                                <li>@Html.ActionLink("Wine", "Index", "Wine", null, new { id = "WineButton"})</li>
                                <li>@Html.ActionLink("Liquor", "Index", "Liqour", null, new { id = "LiqourButton"})</li>
                                @*                            <li>@Html.ActionLink("Specials", "Index", "Specials", null, new { id = "SpecialsButton"})</li>*@
                                <li>@Html.ActionLink("About", "Index", "About", null, new { id = "AboutButton"})</li>
                            </ul>
                        </nav>
                    </div>
                    <div class="float-right">
                        <section id="login">
                            @Html.Partial("_LoginPartial")
                        </section>
                    </div>
                </div>
                <div class="BidVertiser-top" >
                    <div class="mock-ad-horizontal">
                         <!-- Begin BidVertiser code -->
                        @*<SCRIPT LANGUAGE="JavaScript1.1" SRC="http://bdv.bidvertiser.com/BidVertiser.dbm?pid=576640&bid=1442373" type="text/javascript"></SCRIPT>
                        <noscript><a href="http://www.bidvertiser.com">advertising</a></noscript>
                        *@<!-- End BidVertiser code --> 
                    </div>
                </div>
            </div>
        </header>
        <div id="body">
            <div class="scroll-y">
                @RenderSection("featured", required: false)
                <section class="content-wrapper main-content clear-fix">
                    @RenderBody()
                </section>
            </div>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - wwDrink</p>
                </div>
            </div>
        </footer>
        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
